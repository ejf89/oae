<!-- text-w-cta.liquid -->

<div class="text-with-cta gutter">

  <h1>{{section.settings.heading}}</h1>

  <p>{{section.settings.text}}</p>

  <div class="cta cta-white cta-half">
    <a class="cta-link" href="{{section.settings.cta_link}}">{{ section.settings.cta_text }}</a>
  </div>

</div>


{% schema %}
  {
    "name": "Text With CTA",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Static Hero"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Enter Copy Here"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text",
        "default": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link",
        "default": "/"
      }
    ],
    "presets": [
      {
        "name": "Text With CTA",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
