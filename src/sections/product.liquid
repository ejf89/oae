



  {%- for block in section.blocks -%}

    {%- if block.settings.selected_product == product.handle -%}
      {% assign product = all_products[block.settings.selected_product]  %}

        {%- include 'product', product: product, vendor_link: block.settings.vendor_link -%}


    {%- endif -%}
  {%- endfor -%}




{% schema %}
{
  "name": "Product",
  "class": "product-page-container",
  "blocks": [
    {
      "name": "Product",
      "type": "product_block",
      "settings": [
        {
          "type": "product",
          "id": "selected_product",
          "label": "Product"
        },
        {
          "type": "color",
          "id": "gradient_tag",
          "label": "Gradient Tag",
          "default": "#50BBBF"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "url",
          "id": "vendor_link",
          "label": "Vendor Link"
        }
      ]
    }
  ]

}
{% endschema %}
